  "author": "Akhib",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/design-systemui.git"
  },
  "homepage": "https://yourusername.github.io/design-systemui",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@storybook/addon-docs": "^9.0.8",
    "@storybook/addon-onboarding": "^9.0.8",
    "@storybook/react-vite": "^9.0.8",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
